@page
@model projekt_SBD.Pages.AsystenciGodzinyPracy.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Godziny pracy</h4>
    <h3>@Model.asystentSurnameName</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Dzień:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.poczatekDzienPracy)
        </dd>
        <dt class="col-sm-2">
            Początek:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.poczatekGodzina)
        </dd>
        <dt class="col-sm-2">
            Koniec:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.koniecGodzina)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AsystentGodzinyPracy.ZmianaId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="/Stomatolodzy/Index">Powrót</a>
    </form>
</div>
