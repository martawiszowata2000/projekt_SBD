@page
@model projekt_SBD.Pages.Wizyty.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div>
    <h4>Wizyta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data i godzina:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wizyta.DataGodzina)
        </dd>
        <dt class="col-sm-2">
            Stomatolog:
        </dt>
        <dd class="col-sm-10">
            @Model.GetStomatolog(Model.Wizyta.StomatologId)
        </dd>
        <dt class="col-sm-2">
            Asystent:
        </dt>
        <dd class="col-sm-10">
            @Model.GetAsystent(Model.Wizyta.StomatologId)
        </dd>
        <dt class="col-sm-2">
            Pacjent:
        </dt>
        <dd class="col-sm-10">
            @Model.GetPacjent(Model.Wizyta.StomatologId)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Wizyta.WizytaId">Edytuj</a> |
    <a asp-page="./Index">Powrót</a>
</div>

