@page
@model projekt_SBD.Pages.Pacjenci.DeleteModel

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <br />
    <h4>Pacjent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pacjent.Imie)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pacjent.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            Numer telefonu
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pacjent.NumerTelefonu)
        </dd>
        <dt class="col-sm-2">
            Nr PESEL
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pacjent.PESEL)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pacjent.PacjentId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
    </form>
</div>
