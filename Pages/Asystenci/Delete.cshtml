@page
@model projekt_SBD.Pages.Asystenci.DeleteModel

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Asystent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.Imie)
        </dd>
        <dt class="col-sm-2">
            Drugie imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.DrugieImie)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.Nazwisko)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Asystent.AsystentId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
    </form>
</div>
