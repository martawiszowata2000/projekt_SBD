@page
@model projekt_SBD.Pages.Asystenci.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div>
    <h4>Asystent</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.Imie)
        </dd>
        <dt class="col-sm-2">
            Drugie imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asystent.DrugieImie)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Asystent.AsystentId">Edytuj</a> |
    <a asp-page="./Index">Powrót</a>
</div>
<br />
<br />
<a asp-page="/AsystenciGodzinyPracy/Create" asp-route-id="@Model.Asystent.AsystentId">Dodaj</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Kiedy
            </th>
            <th>
                Początek
            </th>
            <th>
                Koniec
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.godzinyPracyAsystenci)
        {
            <tr>
                <td>
                    @Model.GetPoczatekDzien(item.ZmianaId)
                </td>
                <td>
                    @Model.GetPoczatekGodzina(item.ZmianaId)
                </td>
                <td>
                    @Model.GetKoniecGodzina(item.ZmianaId)
                </td>
                <td>
                    <a asp-page="/AsystenciGodzinyPracy/Edit" asp-route-id="@item.ZmianaId">Edytuj</a> |
                    <a asp-page="/AsystenciGodzinyPracy/Details" asp-route-id="@item.ZmianaId">Szczegóły</a> |
                    <a asp-page="/AsystenciGodzinyPracy/Delete" asp-route-id="@item.ZmianaId">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>