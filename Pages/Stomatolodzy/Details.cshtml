@page
@model projekt_SBD.Pages.Stomatolodzy.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Szczegóły</h1>

<div>
    <h4>Stomatolog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.Nazwisko)
        </dd>
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.Imie)
        </dd>
        <dt class="col-sm-2">
            Drugie imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.DrugieImie)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Stomatolog.StomatologId">Edytuj</a> |
    <a asp-page="./Index">Powrót</a>
</div>
<br />
<br />
<a asp-page="/StomatolodzyGodzinyPracy/Create" asp-route-id="@Model.Stomatolog.StomatologId" >Dodaj</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Kiedy
            </th>
            <th>
                Początek
            </th>
            <th>
                Koniec
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.godzinyPracyStomalolodzy)
            {
        <tr>
            <td>
                @Model.GetPoczatekDzien(item.ZmianaId)
            </td>
            <td>
                @Model.GetPoczatekGodzina(item.ZmianaId)
            </td>
            <td>
                @Model.GetKoniecGodzina(item.ZmianaId)
            </td>
            <td>
                <a asp-page="/StomatolodzyGodzinyPracy/Edit" asp-route-id="@item.ZmianaId">Edytuj</a> |
                <a asp-page="/StomatolodzyGodzinyPracy/Details" asp-route-id="@item.ZmianaId">Szczegóły</a> |
                <a asp-page="/StomatolodzyGodzinyPracy/Delete" asp-route-id="@item.ZmianaId">Usuń</a>
            </td>
        </tr>
            }
    </tbody>
</table>
