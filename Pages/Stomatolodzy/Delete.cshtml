@page
@model projekt_SBD.Pages.Stomatolodzy.DeleteModel

@{
    ViewData["Title"] = "Usuwanie";
}

<h1>Usuwanie</h1>

<h3>Czy na pewno chcesz usunąć?</h3>
<div>
    <h4>Stomatolog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.Imie)
        </dd>
        <dt class="col-sm-2">
            Drugie imię
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.DrugieImie)
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stomatolog.Nazwisko)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Stomatolog.StomatologId" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-page="./Index">Powrót</a>
    </form>
</div>
