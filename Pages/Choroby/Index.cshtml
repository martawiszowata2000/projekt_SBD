@page
@model projekt_SBD.Pages.Choroby.IndexModel

@{
    ViewData["Title"] = "Spis chorób";
}

<h1>Spis chorób</h1>

<p>
    <a asp-page="Create">Dodaj nową chorobę</a>
</p>
<form method="post" class="row g-4">
    <div class="col-auto">
        <input asp-for="Wyszukiwanie" class="form-control" id="Szukanie" placeholder="np. Cukrzyca">
    </div>
    <div class="col-auto">

        <button class="btn btn-primary" type="submit">Szukaj</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NazwaSort">Nazwa</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Choroba) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazwaChoroby)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ChorobaId">Edytuj</a> |
                <a asp-page="./Delete" asp-route-id="@item.ChorobaId">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
