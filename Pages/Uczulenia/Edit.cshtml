@page
@model projekt_SBD.Pages.Uczulenia.EditModel

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edycja</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Uczulenie.UczulenieId" />
            <div class="form-group">
                <label class="control-label">Nazwa</label>
                <input asp-for="Uczulenie.NazwaAlergenu" class="form-control" />
                <span asp-validation-for="Uczulenie.NazwaAlergenu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Wróć do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
